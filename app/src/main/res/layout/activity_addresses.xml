<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addresses">
        <RelativeLayout
            android:id="@+id/address1"
            android:background="@color/offwhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="+ Add New Address"
                android:textSize="8dp"
                android:textColor="@color/green"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/address2"
            android:layout_below="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saved Addresses"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="5dp"
                    android:textSize="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/address3"
            android:layout_below="@+id/address2"
            android:background="@color/offwhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:text="Home"
            android:textAlignment="textStart"
            android:textSize="8dp"
            android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/address4"
            android:layout_below="@id/address3"
            android:background="@color/offwhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laa Lavender, mangamana Palaya, HSR layout, Sector-6, Bengaluru Karnataka"
            android:textSize="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/address5"
            android:layout_below="@id/address4"
            android:background="@color/offwhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pincode"
            android:textSize="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/address6"
            android:layout_toRightOf="@id/address5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="654879"
            android:inputType="number"
            android:textStyle="bold"
            android:textSize="8dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_below="@+id/address5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/address6"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/phone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/address7"
            android:layout_below="@id/address6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
        </RelativeLayout>